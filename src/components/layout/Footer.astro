---
import { Facebook, Instagram, Phone, Mail, MapPin } from 'lucide-astro';
---

<footer>
  <div class="container footer-grid">
    <div class="footer-brand">
      <a href="/" class="logo">
        <span class="charming">Charming</span>
        <span class="choices">Choices</span>
      </a>
      <p class="brand-description">
        Curating quality, stylish, and functional household items, electronics, and gifts for your charming lifestyle.
      </p>
      <div class="social-links">
        <a href="https://www.facebook.com/themagicoventt" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
          <Facebook size={20} />
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
          <Instagram size={20} />
        </a>
      </div>
    </div>

    <div class="footer-links">
      <h3>Quick Links</h3>
      <ul>
        <li><a href="/products">Shop All</a></li>
        <li><a href="/contact">Contact & Map</a></li>
        <li><a href="/testimonials">Reviews</a></li>
      </ul>
    </div>

    <div class="footer-links">
      <h3>Legal</h3>
      <ul>
        <li><a href="/legal/returns">Return Policy</a></li>
        <li><a href="/legal/privacy">Privacy Policy</a></li>
        <li><a href="/legal/terms">Terms of Service</a></li>
      </ul>
    </div>

    <div class="footer-contact">
      <h3>Visit Us</h3>
      <div class="contact-item">
        <MapPin size={18} class="footer-icon" />
        <span>Chaguanas Main Road, Trinidad</span>
      </div>
      <div class="contact-item">
        <Phone size={18} class="footer-icon" />
        <span>+1 868-467-8700</span>
      </div>
      <div class="contact-item">
        <Mail size={18} class="footer-icon" />
        <span>caribbeancodestudios@gmail.com</span>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <p>&copy; {new Date().getFullYear()} Charming Choices. Developed by <a href="https://caribbeancodestudios.com" target="_blank" rel="noopener noreferrer" style="color: var(--secondary); text-decoration: underline;">CaribbeanCodeStudios</a>.</p>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: var(--primary);
    color: white;
    padding-top: 5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 2fr;
    gap: 4rem;
    padding-bottom: 5rem;
  }

  .logo {
    display: flex;
    flex-direction: column;
    margin-bottom: 1.5rem;
  }

  .charming {
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
  }

  .choices {
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    letter-spacing: 0.2rem;
    color: var(--secondary);
    text-transform: uppercase;
    font-weight: 600;
    margin-top: -0.2rem;
  }

  .brand-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
    margin-bottom: 2rem;
    max-width: 300px;
  }

  h3 {
    font-family: 'Inter', sans-serif;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    position: relative;
    padding-bottom: 0.5rem;
  }

  h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 2rem;
    height: 2px;
    background-color: var(--secondary);
  }

  .footer-links ul {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
  }

  .footer-links a:hover {
    color: var(--secondary);
    padding-left: 0.5rem;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
  }

  .footer-icon {
    color: var(--secondary);
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    color: white;
    transition: var(--transition);
  }

  .social-links a:hover {
    color: var(--secondary);
    transform: translateY(-3px);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem 0;
    text-align: center;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 992px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 600px) {
    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .social-links {
      justify-content: center;
    }
    h3::after {
      left: 50%;
      transform: translateX(-50%);
    }
    .brand-description {
      margin: 0 auto 2rem;
    }
    .contact-item {
      justify-content: center;
    }
  }
</style>
