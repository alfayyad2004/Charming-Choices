---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { ShoppingBag, ChevronLeft, Truck, ShieldCheck, Heart } from 'lucide-astro';
import Badge from '../../components/ui/Badge.astro';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const { title, price, image, category, badge, description, stock } = product.data;
---

<Layout title={title} description={description}>
  <section class="section-padding">
    <div class="container">
      <a href="/products" class="back-link">
        <ChevronLeft size={18} /> Back to Catalog
      </a>

      <div class="product-detail-grid">
        <div class="product-gallery">
          <div class="main-image glass zoom-container">
            <img id="zoom-img" src={image} alt={title} />
          </div>
          <div class="gallery-thumbs">
            <!-- For now, just repeat the main image -->
            <div class="thumb active"><img src={image} alt={title} /></div>
            <div class="thumb"><img src={image} alt={title} /></div>
            <div class="thumb"><img src={image} alt={title} /></div>
          </div>
        </div>

        <div class="product-info">
          {badge && <div class="badge-wrapper"><Badge type={badge} /></div>}
          <p class="category">{category}</p>
          <h1>{title}</h1>
          <p class="price">${price.toFixed(2)} TTD</p>
          
          <div class="description">
            <p>{description}</p>
          </div>

          <div class="purchase-actions">
            <button class="btn btn-primary add-to-cart-btn" data-product={JSON.stringify({id: product.slug, title, price, image})}>
              <ShoppingBag size={20} style="margin-right: 0.75rem" /> Add to Cart
            </button>
            <button class="btn btn-secondary icon-only" aria-label="Add to Wishlist">
              <Heart size={20} />
            </button>
          </div>

          <div class="product-meta">
            <div class="meta-item">
              <Truck size={18} />
              <span>Available for Store Pickup & Delivery</span>
            </div>
            <div class="meta-item">
              <ShieldCheck size={18} />
              <span>{stock > 0 ? `In Stock (${stock} available)` : 'Out of Stock'}</span>
            </div>
          </div>

          <div class="additional-info">
            <h3>Product Details</h3>
            <div class="content-body">
              <slot />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-light);
    font-weight: 500;
    margin-bottom: 2rem;
  }

  .back-link:hover {
    color: var(--primary);
  }

  .product-detail-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .zoom-container {
    border-radius: var(--radius);
    overflow: hidden;
    aspect-ratio: 1;
    cursor: zoom-in;
    position: relative;
  }

  .zoom-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.1s ease-out;
    transform-origin: center center;
  }

  .gallery-thumbs {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .thumb {
    width: 4rem;
    height: 4rem;
    border-radius: calc(var(--radius) / 2);
    overflow: hidden;
    cursor: pointer;
    border: 2px solid transparent;
    transition: var(--transition);
  }

  .thumb.active {
    border-color: var(--primary);
  }

  .thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .category {
    font-size: 0.9rem;
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .price {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 2rem;
  }

  .description {
    font-size: 1.1rem;
    color: var(--text-light);
    margin-bottom: 2.5rem;
    line-height: 1.8;
  }

  .purchase-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .add-to-cart-btn {
    flex-grow: 1;
    padding: 1rem;
  }

  .icon-only {
    width: 3.5rem;
    padding: 0;
  }

  .product-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem 0;
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
    margin-bottom: 3rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--text);
    font-size: 0.95rem;
  }

  .meta-item svg {
    color: var(--primary);
  }

  .additional-info h3 {
    margin-bottom: 1rem;
  }

  .content-body {
    color: var(--text-light);
  }

  @media (max-width: 992px) {
    .product-detail-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    h1 {
      font-size: 2.25rem;
    }
  }
</style>

<script>
  import { addToCart } from '../../stores/cartStore';

  // Zoom logic
  const container = document.querySelector('.zoom-container') as HTMLElement;
  const img = document.getElementById('zoom-img') as HTMLImageElement;

  container?.addEventListener('mousemove', (e: MouseEvent) => {
    const { left, top, width, height } = container.getBoundingClientRect();
    const x = ((e.clientX - left) / width) * 100;
    const y = ((e.clientY - top) / height) * 100;
    
    img.style.transformOrigin = `${x}% ${y}%`;
    img.style.transform = 'scale(2)';
  });

  container?.addEventListener('mouseleave', () => {
    img.style.transform = 'scale(1)';
  });

  // Cart logic
  const addBtn = document.querySelector('.add-to-cart-btn');
  addBtn?.addEventListener('click', () => {
    const productData = JSON.parse(addBtn.getAttribute('data-product')!);
    addToCart(productData);
    
    // Alert or Toast could be added here
    window.location.href = '/cart';
  });
</script>
