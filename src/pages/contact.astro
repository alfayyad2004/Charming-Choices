---
import Layout from '../layouts/Layout.astro';
import { Mail, Phone, MapPin, Clock } from 'lucide-astro';
---

<Layout title="Contact Us">
  <section class="section-padding">
    <div class="container">
      <div class="section-header">
        <h1>Visit Our Store</h1>
        <p>We're located in the heart of Chaguanas. Stop by to see our "Charming" collection in person.</p>
      </div>

      <div class="contact-grid">
        <div class="contact-info">
          <div class="info-card glass">
            <div class="info-item">
              <MapPin class="icon" />
              <div>
                <h3>Our Location</h3>
                <p>Chaguanas Main Road (Near the Library), Chaguanas, Trinidad</p>
              </div>
            </div>
            
            <div class="info-item">
              <Phone class="icon" />
              <div>
                <h3>Call or WhatsApp</h3>
                <p>+1 868-467-8700</p>
              </div>
            </div>

            <div class="info-item">
              <Mail class="icon" />
              <div>
                <h3>Email</h3>
                <p>caribbeancodestudios@gmail.com</p>
              </div>
            </div>

            <div class="info-item">
              <Clock class="icon" />
              <div>
                <h3>Opening Hours</h3>
                <p>Mon - Sat: 9:00 AM - 6:00 PM</p>
                <p>Sun: Closed</p>
              </div>
            </div>
          </div>
        </div>

        <div class="map-container">
          <!-- Embedded Google Map for Chaguanas -->
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15668.041632761619!2d-61.42456485!3d10.51652875!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8c35f68b320d778d%3A0x6b3b55c3c06e87b7!2sChaguanas!5e0!3m2!1sen!2stt!4v1703330000000!5m2!1sen!2stt" 
            width="100%" 
            height="450" 
            style="border:0; border-radius: var(--radius); box-shadow: var(--shadow-lg);" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    align-items: start;
  }

  .info-card {
    padding: 3rem;
    border-radius: var(--radius);
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .info-item {
    display: flex;
    gap: 1.5rem;
  }

  .info-item .icon {
    color: var(--primary);
    flex-shrink: 0;
  }

  .info-item h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    font-family: 'Inter', sans-serif;
  }

  .info-item p {
    color: var(--text-light);
    line-height: 1.5;
  }

  @media (max-width: 992px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
